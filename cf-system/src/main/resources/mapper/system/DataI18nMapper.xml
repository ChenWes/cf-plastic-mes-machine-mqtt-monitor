<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.system.mapper.I18nMapper">

    <select id="getPrimaryKeyNames" resultType="Map">
        SELECT `COLUMN_NAME`,
        `TABLE_NAME`
        FROM `information_schema`.`COLUMNS`
        WHERE (`TABLE_SCHEMA` = #{tableSchema})
        AND (
        `TABLE_NAME` IN
        <foreach collection="tableNames" item="tableName" open="(" separator="," close=")">
            #{tableName}
        </foreach>
        )
        AND (`COLUMN_KEY` = 'PRI')
    </select>

    <select id="getDataList" resultType="Map">
        ${sql}
    </select>
</mapper>