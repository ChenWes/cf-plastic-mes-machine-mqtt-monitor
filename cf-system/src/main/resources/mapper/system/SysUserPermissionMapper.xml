<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.system.mapper.SysUserPermissionMapper">
    
    <resultMap type="SysUserPermission" id="SysUserPermissionResult">
        <result property="userPermissionId"    column="user_permission_id"    />
        <result property="userId"    column="user_id"    />
        <result property="permissionId"    column="permission_id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="getSysUserPermissionSql">
        select user_permission_id, user_id, permission_id, create_by, create_time, update_by, update_time from sys_user_permission
    </sql>

    <select id="getSysUserPermissionList" parameterType="SysUserPermission" resultMap="SysUserPermissionResult">
        <include refid="getSysUserPermissionSql"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="permissionId != null "> and permission_id = #{permissionId}</if>
        </where>
    </select>
    
    <select id="getSysUserPermissionById" parameterType="Long" resultMap="SysUserPermissionResult">
          <include refid="getSysUserPermissionSql"/>
        where user_permission_id = #{userPermissionId}
    </select>

    <select id="getSysUserPermissionByUserId" parameterType="Long" resultMap="SysUserPermissionResult">
        <include refid="getSysUserPermissionSql"/>
        where user_id = #{userId}
    </select>
        
    <insert id="insertSysUserPermission" parameterType="SysUserPermission">
        insert into sys_user_permission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userPermissionId != null">user_permission_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="permissionId != null">permission_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userPermissionId != null">#{userPermissionId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="permissionId != null">#{permissionId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSysUserPermission" parameterType="SysUserPermission">
        update sys_user_permission
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="permissionId != null">permission_id = #{permissionId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where user_permission_id = #{userPermissionId}
    </update>

    <delete id="deleteSysUserPermissionById" parameterType="Long">
        delete from sys_user_permission where user_permission_id = #{userPermissionId}
    </delete>

    <delete id="deleteSysUserPermissionByUserId" parameterType="Long">
        delete from sys_user_permission where user_id = #{userId}
    </delete>

    <delete id="deleteSysUserPermissionByMenuId" parameterType="Long">
        delete from sys_user_permission  where permission_id in ( select  permission_id from sys_permission where menu_id=#{menuId})
    </delete>

    <delete id="deleteSysUserPermissionByPermissionId" parameterType="Long">
        delete from sys_user_permission  where permission_id=#{permissionId}
    </delete>


    <delete id="deleteSysUserPermissionByIds" parameterType="String">
        delete from sys_user_permission where user_permission_id in
        <foreach item="userPermissionId" collection="array" open="(" separator="," close=")">
            #{userPermissionId}
        </foreach>
    </delete>

    <delete id="deleteSysUserPermissionByUserIds" parameterType="String">
        delete from sys_user_permission where user_id in
        <foreach item="userId" collection="array" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>

    <insert id="batchUserPermission">
        insert into sys_user_permission(user_id, permission_id,create_by,create_time) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.userId},#{item.permissionId},#{item.createBy},#{item.createTime})
        </foreach>
    </insert>
    
</mapper>