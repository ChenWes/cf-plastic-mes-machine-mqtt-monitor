<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.mes.mapper.MachineTypeMapper">
    <resultMap id="MachineTypeResult" type="com.cf.mes.domain.MachineType">
        <result property="machineTypeId" column="machine_type_id"/>
        <result property="machineTypeCode" column="machine_type_code"/>
        <result property="machineTypeName" column="machine_type_name"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>
    <sql id="getMachineTypeSql">
        select machine_type_id, machine_type_code, machine_type_name, status, remark, create_by, create_time, update_by,
        update_time from `machine_type`
    </sql>

    <insert id="insertMachineType" parameterType="com.cf.mes.domain.MachineType" useGeneratedKeys="true"
            keyProperty="machineTypeId">
        insert into `machine_type`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="machineTypeCode != null and machineTypeCode != ''">machine_type_code,</if>
            <if test="machineTypeName != null">machine_type_name,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="machineTypeCode != null and machineTypeCode != ''">#{machineTypeCode},</if>
            <if test="machineTypeName != null">#{machineTypeName},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateMachineType" parameterType="com.cf.mes.domain.MachineType">
        update `machine_type`
        <trim prefix="SET" suffixOverrides=",">
            <if test="machineTypeName != null">machine_type_name = #{machineTypeName},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where machine_type_id = #{machineTypeId}
    </update>

    <delete id="deleteMachineTypeById" parameterType="Long">
        delete from `machine_type` where machine_type_id = #{machineTypeId}
    </delete>

    <delete id="deleteMachineTypeByIds">
        delete from `machine_type` where machine_type_id in
        <foreach item="machineTypeId" collection="array" open="(" separator="," close=")">
            #{machineTypeId}
        </foreach>
    </delete>

    <select id="getMachineTypeById" resultMap="MachineTypeResult" parameterType="Long">
        <include refid="getMachineTypeSql"/>
        where machine_type_id = #{machineTypeId}
    </select>

    <select id="getMachineTypeByCode" resultMap="MachineTypeResult" parameterType="String">
        <include refid="getMachineTypeSql"/>
        where machine_type_code = #{machineTypeCode}
    </select>

    <select id="getMachineTypeList" resultMap="MachineTypeResult">
        <include refid="getMachineTypeSql"/>
        <where>
            <if test="machineTypeCode != null  and machineTypeCode != ''">and machine_type_code like concat('%',
                #{machineTypeCode}, '%')
            </if>
            <if test="machineTypeName != null  and machineTypeName != ''">and (machine_type_name like concat('%',
                #{machineTypeName}, '%') or machine_type_id in (select record_id from sys_lang_info where
                table_name='machine_type' and column_name='machine_type_name' and value like concat('%',
                #{machineTypeName}, '%')))
            </if>
            <if test="status != null  and status != ''">and status = #{status}</if>
            <if test="remark != null  and remark != ''">and remark like concat('%', #{remark}, '%')</if>
        </where>
    </select>

    <select id="getMachineTypeListByIds" resultMap="MachineTypeResult">
        <include refid="getMachineTypeSql"/>
        where machine_type_id in
        <foreach item="machineTypeId" collection="list" open="(" separator="," close=")">
            #{machineTypeId}
        </foreach>
    </select>

</mapper>